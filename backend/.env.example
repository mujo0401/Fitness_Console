# Flask settings
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your_secret_key

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Session settings
SESSION_TYPE=filesystem
SESSION_PERMANENT=False
SESSION_USE_SIGNER=True

# Fitbit API settings
FITBIT_CLIENT_ID=your_fitbit_client_id
FITBIT_CLIENT_SECRET=your_fitbit_client_secret
FITBIT_REDIRECT_URI=your_fitbit_redirect_uri

# Apple Health settings
APPLE_HEALTH_ENABLED=True

# Google API settings
GOOGLE_PLACES_API_KEY=your_google_places_api_key
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=your_google_redirect_uri

# YouTube Music API settings
YOUTUBE_MUSIC_ENABLED=True
YOUTUBE_MUSIC_MOCK_DATA=True

# Optional DoorDash integration
DOORDASH_API_KEY=your_doordash_api_key
DOORDASH_CLIENT_ID=your_doordash_client_id
DOORDASH_CLIENT_SECRET=your_doordash_client_secret
DOORDASH_API_BASE_URL=https://api.doordash.com
DOORDASH_MOCK_API_ENABLED=True

# Spoonacular API
SPOONACULAR_API_KEY=your_spoonacular_api_key
SPOONACULAR_CACHE_ENABLED=True
SPOONACULAR_CACHE_TIMEOUT=3600